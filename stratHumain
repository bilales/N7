package allumettes;


public class StrategieHumain implements Strategie{
	

	public StrategieHumain() {
	}

	@Override
	public int getPrise(Jeu jeu) throws CoupInvalideException  {
		assert(jeu!= null);
		
		int prise=13;
		String coup;
		while (prise == 13) {
			try {
	            coup = Strategie.scanner.nextLine();

	            if (coup.equals("triche")) {
	            	if(jeu.getNombreAllumettes()>1) {
							jeu.retirer(1);
							System.out.println("[Une allumette en moins, plus que "+jeu.getNombreAllumettes()+". Chut !]");
								throw new CoupInvalideException("j'ai pas encore jou√©");
	            		}
	            }else {
	            	prise = Integer.parseInt(coup);
	            	}
			}catch(NumberFormatException e)
	        {System.out.println("Vous devez donner un entier.");
				throw new CoupInvalideException("pas entier");
				}
	}
		return prise;
}
	
	public String ToString() {
		return "Humain";
	}
	
}

